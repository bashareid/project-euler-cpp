/*215 = 32768 and the sum of its digits is 3 + 2 + 7 + 6 + 8 = 26.

What is the sum of the digits of the number 21000?
*/
#include<iostream>
#include<math.h>
#include<string>
using namespace std;

int main() {
 double f = pow(2,1000);
 int sum = 0;
 std::string str = std::to_string(f);
 for(char onenum: str){
   sum = sum + stoi( &onenum);
   cout<< sum <<endl;
  }
  return 0;
}
